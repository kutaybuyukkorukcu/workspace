package com.kutay.github.webservice.numarapredict;

import java.util.InputMismatchException;
import java.util.Random;
import java.util.Scanner;

public class NumberEstimation {

	private final int MIN;
	private final int MAX;

	private int guess = 0;

	public NumberEstimation(int min, int max) {
		MIN = min;
		MAX = max;

		guess = generateNewNumber();

		int guess;

		do {
			guess = getUserInput();

		} while (!checkGuess(guess));
	}

	private int getUserInput() {
		do {
			System.out.print((MIN + 1) + " ile " + MAX + " arasında bir sayı tahmin et : ");
			try {				
			userinput = sayi;
			} catch (InputMismatchException i) {
				System.out.println("Lütfen sayı giriniz");
			}	
			return (userinput);
		} while (!isInteger(userinput));
		
	}

	private int generateNewNumber() {
		Random random = new Random();
		return random.nextInt(MAX - 1) + 1;
	}

	private boolean checkGuess(int numberGuessed) {
		if (numberGuessed == guess) {
			System.out.println("Tebrikler! " + guess + " tahmin ettiğim numaraydı.");
			return true;
		} else {
			if (numberGuessed > guess) {
				System.out.println("Numaram " + numberGuessed + "'den daha aşağıda.");
			} else {
				System.out.println("Numaram " + numberGuessed + "'den daha yukarıda.");
			}
		}
		return false;

	}

	public boolean isInteger(int s) {
		if (MIN <= s && s <= MAX) 
			return false;
		else
			return true;
	}

	public static void main(String args[]) {
		new NumberEstimation(0, 100);
	}
}